{% extends "layout.html.jinja2" %}
{% set page_title = "Editor" %}

{% block body %}

<h1 class="h3">Editor</h1>

<div class="form-group">
    <textarea class="form-control my-5" rows="15" id="templateInput">{{code}}</textarea>
    <div class="text-center">
    <button type="button" class="btn btn-primary" id="uploadBtn">Upload code</button>
    </div>
</div>

<div class="container">
    <div class="alert alert-success alert-dismissible" id="successAlert">
        <strong>Success!</strong> Code has been uploaded.
    </div>
    <div class="alert alert-danger alert-dismissible" id="errorAlert">
        <strong>Error!</strong>
    </div>
</div>

{% endblock %}